{
    "mcpServers": {
        "alteriom-webhook-server": {
            "command": "node",
            "args": ["app.js"],
            "env": {
                "GITHUB_APP_ID": "${COPILOT_MCP_GITHUB_APP_ID}",
                "GITHUB_APP_PRIVATE_KEY": "${COPILOT_MCP_GITHUB_APP_PRIVATE_KEY}",
                "WEBHOOK_SECRET": "${COPILOT_MCP_WEBHOOK_SECRET}",
                "PORT": "3000",
                "NODE_ENV": "development"
            }
        }
    }
}
